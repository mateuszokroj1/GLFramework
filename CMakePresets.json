{
  "version": 2,
  "configurePresets": [
    {
      "name": "Debug",
      "displayName": "x64 Debug",
      "description": "Default build profile.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    }
  ]
}