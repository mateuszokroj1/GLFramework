{
  "version": 2,
  "configurePresets": [
    {
      "name": "Debug",
      "displayName": "x64 Debug",
      "description": "Default debugging profile.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_C_COMPILER": "cl.exe",
        "GLFramework_SharedBuild": false,
        "GLFramework_BuildTests": true
      }
    },
    {
      "name": "Release",
      "displayName": "x64 Release",
      "description": "Default debugging profile.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_C_COMPILER": "cl.exe",
        "GLFramework_SharedBuild": true,
        "GLFramework_BuildTests": false
      }
    }
  ]
}